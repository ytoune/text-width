{
	"name": "@ytoune/text-width",
	"version": "0.0.1",
	"description": "",
	"author": {
		"name": "ytoune"
	},
	"engines": {
		"node": ">= 16"
	},
	"license": "MIT",
	"source": "src/index.ts",
	"exports": {
		"require": "./dist/index.cjs",
		"default": "./dist/index.modern.js"
	},
	"main": "dist/index.cjs",
	"module": "dist/index.module.js",
	"types": "dist/index.d.ts",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:ytoune/text-width.git"
	},
	"homepage": "https://github.com/ytoune/text-width",
	"scripts": {
		"build": "yarn codegen && rimraf dist && microbundle",
		"dev": "microbundle watch",
		"codegen": "rimraf src/gen && yarn ts-node scripts/make-unicode-data",
		"test": "eslint '**/*.{ts,tsx}' && tsc --noEmit && jest --passWithNoTests",
		"ts-node": "node -r esbuild-register"
	},
	"dependencies": {
		"easta": "^6.0.0",
		"twemoji-parser": "^14.0.0"
	},
	"devDependencies": {
		"@herp-inc/eslint-config": "0.18.0",
		"@swc/core": "1.2.196",
		"@swc/jest": "0.2.21",
		"@types/jest": "28.1.0",
		"@types/node": "17.0.39",
		"@types/twemoji-parser": "13.1.1",
		"@typescript-eslint/eslint-plugin": "5.27.0",
		"@typescript-eslint/parser": "5.27.0",
		"cross-fetch": "3.1.5",
		"esbuild": "0.14.42",
		"esbuild-register": "3.3.2",
		"eslint": "8.17.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-import-resolver-typescript": "2.7.1",
		"eslint-plugin-import": "2.26.0",
		"jest": "28.1.0",
		"microbundle": "0.15.0",
		"prettier": "2.6.2",
		"rimraf": "3.0.2",
		"typescript": "4.7.3"
	},
	"jest": {
		"extensionsToTreatAsEsm": [
			".ts",
			".tsx"
		],
		"transform": {
			"^.+\\.(js|jsx|ts|tsx)$": [
				"@swc/jest",
				{
					"jsc": {
						"parser": {
							"syntax": "typescript"
						}
					}
				}
			]
		},
		"projects": [
			"<rootDir>"
		],
		"moduleNameMapper": {
			"^~/(.*)$": "<rootDir>/src/$1"
		}
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "all",
		"semi": false,
		"arrowParens": "avoid",
		"overrides": [
			{
				"files": [
					"*.md",
					"*.yml",
					"*.yaml"
				],
				"options": {
					"useTabs": false
				}
			}
		]
	}
}
